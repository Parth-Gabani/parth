<body>

    <div class="page-loader">
        <div class="bg-primary"></div>
    </div>

    <div class="layout-wrapper layout-2">
        <div class="layout-inner">
            <div id="layout-sidenav" class="layout-sidenav sidenav sidenav-vertical bg-white logo-dark">

                <%- include('sidenav'); %>
            </div>
            <div class="layout-container">

                <%- include('nav'); %>
                    <style>
                        .select2-results__option--highlighted {
                            background: rgba(24, 28, 33, 0.1);
                        }
                    </style>
                    <div class="layout-content">
                        <div class="container-fluid flex-grow-1 container-p-y">
                            <h4 class="font-weight-bold py-3 mb-0">Edit Category</h4>
                            <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <i class="feather icon-home"></i>
                                    </li>
                                    <li class="breadcrumb-item ">Category</li>
                                    <li class="breadcrumb-item active">Edit Category</li>
                                </ol>
                            </div>
                            <form id="my_form" method="POST" enctype="multipart/form-data">

                                <div class="row">
                                    <div class="col-md-6" style="max-width: 100%;">
                                        <div class="card mb-4" style="width: 50%;">
                                            <h6 class="card-header">Edit Category</h6>
                                            <div class="card-body">
                                                <div class="form-group">
                                                    <label class="form-label">Select Type</label>

                                                    <select class="select2-demo form-control" style="width: 100%"
                                                        id="category" name="category">
                                                        <option value="">Select Category</option>
                                                        <option value="men" <% if(data.category==='men' ) { %>selected<%
                                                                } %>>men</option>
                                                        <option value="women" <% if(data.category==='women' ) { %>
                                                            selected<% } %>>women</option>
                                                        <option value="children" <% if(data.category==='children' ) { %>
                                                            selected<% } %>>children</option>

                                                    </select>
                                                </div>

                                                <div class="form-group col-md-12">
                                                    <label class="form-label">Select Image</label>
                                                    <input type="file" name="cat_image" accept="image/*" id="cat_image"
                                                        value="<%= data.image%>" class="form-control"
                                                        onchange="readURL(this)">

                                                    <img id="blah" src="/public/imgs/category/<%= data.image%>"
                                                        style="max-width:100px;max-height:100px;margin: auto;border: 3px solid #73AD21;padding: 10px;margin:10px">
                                                </div>
                                                <div class="form-group col-md-12">
                                                    <label class="form-label">Category Name</label>
                                                    <input type="text" class="form-control" id="cat_name" name="cname"
                                                        value="<%= data.cname%>" autofocus="">
                                                </div>
                                                <div class="form-group col-md-12">
                                                    <label class="form-label">Slug Category </label>
                                                    <input type="text" class="form-control" id="slug" name="slug"
                                                        value="<%= data.slug%>">
                                                </div>
                                                <div class="form-group col-md-12">
                                                    <label class="form-label">Meta Title</label>
                                                    <input type="text" class="form-control" id="meta_title"
                                                        value="<%= data.mtitle%>" name="mtitle">
                                                </div>
                                                <div class="form-group col-md-12">
                                                    <label class="form-label">Meta Keyword</label>
                                                    <input type="text" class="form-control" id="meta_keyword"
                                                        value="<%= data.mkeyword%>" name="mkeyword">
                                                </div>
                                                <div class="form-group col-md-12">
                                                    <label class="form-label">Meta Descryption</label>
                                                    <input type="text" class="form-control" id="meta_des"
                                                        value="<%= data.mdescryption%>" name="mdescryption">
                                                </div>
                                                <input type="button" onclick="submit_product()" class="btn btn-primary"
                                                    style="float:right;margin:15px;" value="Update">
                                            </div>
                                        </div>

                                    </div>


                                </div>
                            </form>
                        </div>
                    </div>
